{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Npgsql": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/keirogenesis-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 30,
          "shared": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Host=100.30.119.186;Port=5432;Database=kg_dev_db;Username=kg_app_user;Password=100Strong(!)P@ssword;Pooling=true"
  },
  "Jwt": {
    "Secret": "development-secret-key-minimum-32-characters-long-for-security!!",
    "Issuer": "KeiroGenesis",
    "Audience": "keiroGenesis-clients"
  },
  "Auth": {
    "Issuer": "keirogenesis",
    "Audience": "keirogenesis-clients",
    "PreAuthAudience": "keirogenesis-preauth",
    "SecretKey": "development-secret-key-minimum-32-characters!!",
    "PublicKeyPem": "",
    "PrivateKeyPem": "",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7,
    "PreAuthTokenExpiryMinutes": 10
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://keirogenesis.com"
    ]
  }
}